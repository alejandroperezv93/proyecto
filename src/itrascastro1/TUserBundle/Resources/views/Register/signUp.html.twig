{% extends 'base.html.twig' %}


{%  block navbar %}


    <div class="navbar navbar-inverse navbar-fixed-top headroom" >
        <div class="container">
            <div class="navbar-header">
                <!-- Button for smallest screens -->
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse"><span class="icon-bar"></span> <span class="icon-bar"></span> <span class="icon-bar"></span> </button>
                <a class="navbar-brand" href="index.html"><img src="{{asset('bundles/tuser/images/logo.png')}}" alt="Progressus HTML5 template"></a>
            </div>
            <div class="navbar-collapse collapse">

                <form class="form-signin2" action="{{ path('tuser_security_loginCheck') }}" method="post">
                    <ul class="nav solo navbar-nav pull-right">
                        <li><input class="form-control" placeholder="Username" type="text" id="username" name="_username" >  </input> </li>
                        <li><input class="form-control" placeholder="Password" type="password" id="password" name="_password">  </input> </li>
                        <li><div class="form-group spaceless"><button class="btn btn-lg btn-primary btn-block" type="submit">Iniciar Sesi√≥n</button></div>
                        </li>

                    </ul>
                </form>





                <button class="btn btn-lg btn-primary btn-block spaceless" type="submit">Sign in</button>
                <a href="#" class="pull-right need-help">Need help? </a><span class="clearfix"></span>
                </form>
            </div>
        </div>
    </div>
{% endblock navbar %}

            {% block header %}

                {{ parent() }}

                <div class="container separator">
                    <div class="row">
                        <div class="col-sm-11 col-md-8 col-md-offset-4">
                            {% if form.vars.errors is not empty %}
                                <div class="alert alert-danger">{{ form_errors(form) }}</div>
                            {% endif %}


                            <div class="account-wall">

                                <form class="form-signin2" action="{{ path('tuser_register_dosignup') }}" method="post" novalidate="novalidate">
                                    {% spaceless %}
                                        <h1 id="Titulo">Crea una cuenta</h1>
                                        <h2 id="Titulo2">Tus archivos siempre contigo</h2>
                                        <div class="form-group">{{ form_widget(form.username, {'attr': {'class': 'form-control', 'placeholder': 'Username'}}) }}</div>
                                        <div class="form-group spaceless">{{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder': 'Email'}}) }}</div>
                                        <div class="form-group spaceless">{{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control', 'placeholder': 'Password'}}) }}</div>
                                        <div class="form-group spaceless">{{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control', 'placeholder': 'Repeat password'}}) }}</div>
                                        {{ form_rest(form) }}
                                        <div class="form-group spaceless"><button class="btn btn-lg btn-primary btn-block" type="submit">Crear Cuenta</button></div>
                                        <span class="clearfix"></span>
                                    {% endspaceless %}
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            {% endblock header %}